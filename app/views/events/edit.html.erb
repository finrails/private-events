<%= form_with model: @event do |form| %>
  <%= form.label :title %><br/>
  <%= form.text_field :title %><br/>
  <%= form.label :description %><br/>
  <%= form.text_area :description %><br/>
  <%= form.label :date_time %><br/>
  <%= form.datetime_local_field :date_time %><br/>
  <%= form.submit 'Edit it' %>
<% end %>
