<%= render partial: 'shared/header' %>
<% if flash[:notice] %>
  <span data-controller="alert" class="d-flex justify-content-between alert alert-warning" role="alert">
    <%= notice %> <button type="button" data-action="alert#hide" class="btn-close" aria-label="Close"></button>
  </span>
<% end %>


<% if flash[:alert] %>
  <span data-controller="alert" class="d-flex justify-content-between alert alert-warning" role="alert">
    <%= alert %> <button type="button" data-action="alert#hide" class="btn-close" aria-label="Close"></button>
  </span>
<% end %>

<section class="container d-flex flex-column align-items-center justify-content-center">
  <div class="row w-100 mt-5 d-flex justify-content-center">
    <div class="col-xl-6 col-lg-8 col-md-10 col-sm-12">
      <%= form_with model: @event do |form| %>
        <div class="field my-2">
          <%= form.label :title, class: "form-label" %>
          <%= form.text_field :title, class: "form-control" %>
        </div>
        <div class="field my-2">
          <%= form.label :description, class: "form-label" %>
          <%= form.text_area :description, style: "resize: none;", rows: 6, class: "form-control" %>
        </div>
        <div class="field my-2">
          <%= form.label :date_time, class: "form-label" %><br/>
          <%= form.datetime_local_field :date_time, class: "form-control" %>
        </div>
        <%= form.submit 'Save it', class: "btn btn-primary px-5 my-2" %>
        <%= link_to 'Cancel', event_path(@event),class: 'text-danger btn btn-link' %>
      <% end %>
    </div>
  </div>
</section>
