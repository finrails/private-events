<%= render partial: 'shared/header' %>

<% if flash[:notice] %>
  <span data-controller="alert" class="d-flex justify-content-between alert alert-warning" role="alert">
    <%= notice %> <button type="button" data-action="alert#hide" class="btn-close" aria-label="Close"></button>
  </span>
<% end %>


<% if flash[:alert] %>
  <span data-controller="alert" class="d-flex justify-content-between alert alert-warning" role="alert">
    <%= alert %> <button type="button" data-action="alert#hide" class="btn-close" aria-label="Close"></button>
  </span>
<% end %>

<section class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-lg-6 col-md-8 col-sm-10 my-5">
      <%= form_with model: @event do |form| %>
        <div class="field my-2">
          <%= form.label :title, class: 'form-label' %>
          <%= form.text_field :title, class: 'form-control' %>
        </div>

        <div class="field my-2">
          <%= form.label :description, class: 'form-label' %>
          <%= form.text_area :description, rows: 6, style: 'resize: none;', class: 'form-control' %>
        </div>

        <div class="field my-2">
          <%= form.label :date_time, class: 'form-label' %>
          <%= form.datetime_local_field :date_time, class: 'form-control' %>
        </div>
        <%= form.submit 'Touch it', class: 'btn btn-primary px-5' %>
        <%= link_to 'Cancel', root_path, class: 'btn btn-link text-secondary' %>
      <% end %>
    </div>
  </div>
</section>
