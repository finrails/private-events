<section class="container d-flex flex-column">
    <article class="border p-4">
      <span>User: <b><%= @user.email %></b></span><br/>
      <div class="d-flex flex-column gap-2 p-3 border border-2">
        Future Events:
        <% @user.attendeed_events.future.each do |event| %>
        <span class="border p-2">
          Event: <%= event.title %><br/>
          Date: <span><%= event.date_time %></span>
        </span>
        <% end %>
      </div>
      <div class="d-flex flex-column gap-2 mt-2 p-3 border border-2">
        Past Events:
        <% @user.attendeed_events.past.each do |event| %>
        <span class="border p-2">
          Event: <%= event.title %><br/>
          Date: <span class="text-decoration-line-through"><%= event.date_time %></span>
        </span>
        <% end %>
      </div>

    <article class="border-4 border mt-4 d-flex flex-column gap-2 p-4">
      <b>Mail Box:</b>
      <% @user.invites.each do |invitation| %>
        <% unless invitation.status %>
          <div class="border border-2 p-2 d-flex flex-column">
            <span>Invitation by: <%= User.find(invitation.user_id).email %></span>
            <span>Event: <%= Event.find(invitation.event_id).title %></span>
            <%= button_to 'Accept', accept_invitation_path(invitation.id), method: :put, class: 'btn btn-outline-primary mt-2' %>
          <% end %>
        </div>
      <% end %>
    </article>

    </article>

</section>
